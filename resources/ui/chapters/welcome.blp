using Gtk 4.0;

ScrolledWindow welcome_page {
  hexpand: true;
  vexpand: true;
  hscrollbar-policy: never;
  vscrollbar-policy: automatic;
  
  Box welcome_container {
    orientation: vertical;
    spacing: 32;
    halign: center;
    valign: center;
    hexpand: true;
    vexpand: true;
    
    // 主图标区域
    Box icon_container {
      halign: center;
      margin-bottom: 16;
      
      Image welcome_icon {
        icon-name: "applications-development-symbolic";
        pixel-size: 128;
        
        styles [
          "icon-dropshadow"
        ]
      }
    }
    
    // 文本内容区域
    Box text_container {
      orientation: vertical;
      spacing: 20;
      halign: center;
      
      
      Label welcome_title {
        label: "C++ 学习之旅";
        
        styles [
          "title-1"
        ]
      }
      
      Label welcome_subtitle {
        label: "从零基础到高级特性，系统性学习 C++ 编程语言";
        wrap: true;
        justify: center;
        
        styles [
          "title-4",
          "dim-label"
        ]
      }
      
      Label learning_path {
        label: "📚 基础入门 → 💻 面向对象 → 🔧 STL → 🚀 现代C++ → 🏗️ 项目实战";
        wrap: true;
        justify: center;
        
        styles [
          "body"
        ]
      }
    }
    
    // 统计信息区域
    Box stats_container {
      orientation: horizontal;
      spacing: 32;
      halign: center;
      homogeneous: true;
      
      Box chapters_stat {
        orientation: vertical;
        spacing: 8;
        halign: center;
        
        Label chapters_number {
          label: "24";
          
          styles [
            "title-2"
          ]
        }
        
        Label chapters_label {
          label: "学习章节";
          
          styles [
            "caption",
            "dim-label"
          ]
        }
      }
      
      Box stages_stat {
        orientation: vertical;
        spacing: 8;
        halign: center;
        
        Label stages_number {
          label: "8";
          
          styles [
            "title-2"
          ]
        }
        
        Label stages_label {
          label: "学习阶段";
          
          styles [
            "caption",
            "dim-label"
          ]
        }
      }
      
      Box progress_stat {
        orientation: vertical;
        spacing: 8;
        halign: center;
        
        Label progress_number {
          label: "0%";
          
          styles [
            "title-2"
          ]
        }
        
        Label progress_label {
          label: "完成进度";
          
          styles [
            "caption",
            "dim-label"
          ]
        }
      }
    }
    
    // 快速开始区域
    Box quick_start_section {
      orientation: vertical;
      spacing: 20;
      halign: center;
      
      Label quick_start_title {
        label: "快速开始";
        
        styles [
          "title-3"
        ]
      }
      
      Box quick_buttons {
        orientation: horizontal;
        spacing: 16;
        halign: center;
        
        Button start_learning {
          label: "开始学习";
          
          styles [
            "suggested-action",
            "pill"
          ]
        }
        
        Button view_roadmap {
          label: "查看路线图";
          
          styles [
            "pill"
          ]
        }
        
        Button browse_chapters {
          label: "浏览章节";
          
          styles [
            "pill"
          ]
        }
      }
    }
    
    // 学习路线预览
    Box roadmap_preview {
      orientation: vertical;
      spacing: 16;
      halign: center;

      
      Label roadmap_title {
        label: "学习路线预览";
        
        styles [
          "title-3"
        ]
      }
      
      Box roadmap_stages {
        orientation: vertical;
        spacing: 12;
        
        Box stage1 {
          orientation: horizontal;
          spacing: 12;
          
          Image {
            icon-name: "media-playback-start-symbolic";
            icon-size: normal;
          }
          
          Box {
            orientation: vertical;
            spacing: 4;
            hexpand: true;
            
            Label {
              label: "第一阶段：基础入门";
              xalign: 0;
              
              styles [
                "heading"
              ]
            }
            
            Label {
              label: "环境搭建、基础语法、流程控制、数组字符串";
              xalign: 0;
              
              styles [
                "caption",
                "dim-label"
              ]
            }
          }
        }
        
        Box stage2 {
          orientation: horizontal;
          spacing: 12;
          
          Image {
            icon-name: "system-run-symbolic";
            icon-size: normal;
          }
          
          Box {
            orientation: vertical;
            spacing: 4;
            hexpand: true;
            
            Label {
              label: "第二阶段：函数与指针";
              xalign: 0;
              
              styles [
                "heading"
              ]
            }
            
            Label {
              label: "函数基础、指针引用、动态内存管理";
              xalign: 0;
              
              styles [
                "caption",
                "dim-label"
              ]
            }
          }
        }
        
        Box stage3 {
          orientation: horizontal;
          spacing: 12;
          
          Image {
            icon-name: "applications-development-symbolic";
            icon-size: normal;
          }
          
          Box {
            orientation: vertical;
            spacing: 4;
            hexpand: true;
            
            Label {
              label: "第三阶段：面向对象";
              xalign: 0;
              
              styles [
                "heading"
              ]
            }
            
            Label {
              label: "类对象、构造析构、继承、多态";
              xalign: 0;
              
              styles [
                "caption",
                "dim-label"
              ]
            }
          }
        }
        
        Box stage4 {
          orientation: horizontal;
          spacing: 12;
          
          Image {
            icon-name: "folder-music-symbolic";
            icon-size: normal;
          }
          
          Box {
            orientation: vertical;
            spacing: 4;
            hexpand: true;
            
            Label {
              label: "第四阶段：STL标准库";
              xalign: 0;
              
              styles [
                "heading"
              ]
            }
            
            Label {
              label: "容器、算法、迭代器使用";
              xalign: 0;
              
              styles [
                "caption",
                "dim-label"
              ]
            }
          }
        }
      }
    }
    
    // 特色功能介绍
    Box features_section {
      orientation: vertical;
      spacing: 16;
      halign: center;
      
      Label features_title {
        label: "学习特色";
        
        styles [
          "title-3"
        ]
      }
      
      Box features_grid {
        orientation: horizontal;
        spacing: 24;
        halign: center;
        homogeneous: true;
        
        Box feature1 {
          orientation: vertical;
          spacing: 8;
          halign: center;
          width-request: 150;
          
          Image {
            icon-name: "media-playbook-symbolic";
            pixel-size: 48;
          }
          
          Label {
            label: "互动练习";
            
            styles [
              "heading"
            ]
          }
          
          Label {
            label: "边学边练，及时验证学习效果";
            wrap: true;
            justify: center;
            
            styles [
              "caption",
              "dim-label"
            ]
          }
        }
        
        Box feature2 {
          orientation: vertical;
          spacing: 8;
          halign: center;
          width-request: 150;
          
          Image {
            icon-name: "text-x-generic-symbolic";
            pixel-size: 48;
          }
          
          Label {
            label: "代码示例";
            
            styles [
              "heading"
            ]
          }
          
          Label {
            label: "丰富的代码实例，直观理解概念";
            wrap: true;
            justify: center;
            
            styles [
              "caption",
              "dim-label"
            ]
          }
        }
        
        Box feature3 {
          orientation: vertical;
          spacing: 8;
          halign: center;
          width-request: 150;
          
          Image {
            icon-name: "view-refresh-symbolic";
            pixel-size: 48;
          }
          
          Label {
            label: "循序渐进";
            
            styles [
              "heading"
            ]
          }
          
          Label {
            label: "从简单到复杂，逐步掌握C++";
            wrap: true;
            justify: center;
            
            styles [
              "caption",
              "dim-label"
            ]
          }
        }
      }
    }
  }
}